
    <div class="row test">
        <div class="card-body pb-5">
            <h3 class="mt-5"><%= @idea.title %></h3>
            <p><%= @idea.description %></p>
            <div>
                <small>
                    Posted <%= time_ago_in_words(@idea.created_at) %> ago
                </small>
                
                <small>
                    Last edited <%= time_ago_in_words(@idea.updated_at) %> ago  
                </small>
                <div class="mt-3">
                    <% if use_signed_in? && can?(:edit, @idea) %> 
                    <span>
                        <%= link_to "Edit post", edit_idea_path(@idea), class: "btn btn-primary"%>
                    </span>
                    <%end%> 
                    <% if use_signed_in? && can?(:delete, @idea) %> 
                    <span>
                        <%= link_to("Delete", idea_path(@idea),
                        method: :delete,
                        data: {
                        confirm: "Are you sure?"}, class: "btn btn-primary")%>
                    </span>
                   <%end%>
                </div>
            </div>

            <h2>Reviews</h2>

            <%= form_for [@idea, @review] do |r| %>
                <% if @review.errors.present? %>
                    <p>
                    <%= @review.errors.full_messages.join(', ') %>
                    </p>
                <% end %>

                <div>
                    <%= r.text_area(
                    :body, cols: 60, rows: 6,
                    placeholder: "What do you think about this idea?"
                    ) %>
                </div>

                <%= r.submit "Submit" %>
            <% end %>

            <div class="mt-5 mb-5" >
                <% @reviews.each do |review| %>
                    <div class = "card mt-4 mb-4 p-3">
                        <p>
                            <strong>
                                 <%= review.use&.full_name || "[DELETED]" %> Review:
                            </strong> <br />
                                <%= review.body %> <br />
                                <% if use_signed_in? && can?(:delete, review)%> 
                                <small>
                                    <%= link_to(
                                        "Delete",
                                        idea_review_path(@idea, review),
                                        method: :delete,
                                        data: {
                                        confirm: "Are you sure?"
                                        }
                                    ) %>
                                </small>
                                â€¢
                                <% end %> 
                            <small>
                                Review <%= time_ago_in_words(review.created_at) %> ago
                            </small>
                        </p>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
  