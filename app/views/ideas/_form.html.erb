<div class= "row mt-5 form-control">
    <div class="col-md-12">
    
        <%= form_for(@idea) do |i| %>
        
        <% if @idea.errors.present? %>
            <p>
            <%= @idea.errors.full_messages.join(', ') %>
            </p>
        <% end %>

        <div class="form-group">
            <%= i.label(:title)%>
            <input class="form-control" <%= i.text_field(:title)%></input>
        </div>
        
        <div class="form-group">
            <%= i.label(:description)%>
            <textarea class="form-control" rows="3"
            <%= i.text_area(:description)%>
            </textarea>        
        </div>
   
        <%= i.submit%>
        <% end %>
    <div>
