
<div class="row">
    <div class="col-md-12 test form-control">
        
        <h1>Sign In</h1>

        <%= form_for :session, url: session_path do |f| %>
        <div>
            <%= f.label :email %>
            <%= f.email_field :email, class:"form-control" %>
        </div>

        <div>
            <%= f.label :password %>
            <%= f.password_field :password, class:"form-control" %>
        </div>

        <%= f.submit "Sign In", class:"btn btn-primary" %>
        <% end %>
    </div>
</div>